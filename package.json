{
  "name": "mern-fullstack",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "build": "cd front-end && npm run build",
    "install-client": "cd front-end && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "server": "node app.js",
    "develop": "concurrently --kill-others-on-fail \"npm run server\" \"npm run start --prefix front-end\"",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run start --prefix front-end\"",
    "lint": "eslint './src/**/*.{js,jsx}'",
    "lint:fix": "eslint './src/**/*.{js,jsx}' --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CamGham/mern-fullstack.git"
  },
  "author": "Cam",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CamGham/mern-fullstack/issues"
  },
  "homepage": "https://github.com/CamGham/mern-fullstack#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "concurrently": "^7.3.0",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "mongoose": "^6.5.1",
    "validation": "^0.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "devDependencies": {
    "eslint": "^8.22.0",
